{
  "manifest_version": 3,
  "name": "AI Job Application Assistant",
  "version": "1.0.0",
  "description": "Automatically fill job application forms with your saved profile data",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "contextMenus",
    "management"
  ],
  
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "http://localhost:3000/*",
    "http://localhost:3001/*"
  ],
  
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*",
      "http://localhost:3001/*",
      "https://localhost:3000/*",
      "https://localhost:3001/*"
    ]
  },
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://jobs.lever.co/*",
        "https://boards.greenhouse.io/*",
        "https://*.workday.com/*",
        "https://*.bamboohr.com/*",
        "https://*.smartrecruiters.com/*",
        "https://*.icims.com/*",
        "https://*.taleo.net/*",
        "https://*.jobvite.com/*",
        "https://*.breezy.hr/*",
        "https://*.applytojob.com/*",
        "https://apply.workable.com/*",
        "https://recruiting.adp.com/*",
        "https://*.myworkdayjobs.com/*"
      ],
      "js": ["form-filler.js", "submission-monitor.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://localhost:3000/*",
        "http://localhost:3001/*"
      ],
      "js": ["web-bridge.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Job Application Assistant"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["injected-script.js", "form-filler.js", "submission-monitor.js"],
      "matches": ["<all_urls>"]
    }
  ]
}